{
  "fmt": {
    "exclude": [
      "public/util/mspgothic_supported.json",
      "public/util/charwidth.json"
    ]
  },
  "lint": {
    "rules": { "exclude": ["no-window-prefix", "no-window"] }
  },
  "tasks": {
    "start": "deno run --watch --unstable-kv --allow-net --allow-read=public --allow-read=.env --allow-read=.env.defaults --allow-read=.env.example --allow-env server.deno.js"
